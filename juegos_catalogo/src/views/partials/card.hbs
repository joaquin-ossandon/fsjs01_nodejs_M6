<div class="card">
  <img
    src="https://dummyimage.com/600x400/000/fff&text={{this.title}}"
    class="card-img-top"
    alt="Palabra Holandas en diseÃ±o decorativo"
  />
  <div class="btn btn-{{colorByStock this.stock}} position-absolute top-50 end-0">
    Stock
    <span class="badge text-bg-secondary">{{this.stock}}</span>
  </div>
  <div class="card-body">
    <h5 class="card-title">{{this.title}}</h5>
    <p class="card-text">{{this.platform}}</p>
    <a href="#" class="btn btn-primary">{{formatPrice this.price}}</a>
  </div>
</div>

